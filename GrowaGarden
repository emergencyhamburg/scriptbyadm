Il ne fonctionne qu'avec les ex√©cutors compatibles.
]]

-- Chargement de l'interface
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/Quinell5/Orion/main/OrionLib.lua"))()

local Window = OrionLib:MakeWindow({
    Name = "üå± Grow A Garden | Interface Pro",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "GrowAGardenCFG"
})

-- Variables
local AutoFarmEnabled = false
local AutoCollectEnabled = false
local AutoWaterEnabled = false

-- Fonction d'AutoFarm
function AutoFarm()
    while AutoFarmEnabled and task.wait(1) do
        for _, plot in pairs(workspace.Plots:GetChildren()) do
            if plot:FindFirstChild("GrowPart") and plot:FindFirstChild("Owner") then
                if plot.Owner.Value == game.Players.LocalPlayer.Name then
                    firetouchinterest(plot.GrowPart, game.Players.LocalPlayer.Character.HumanoidRootPart, 0)
                    task.wait(0.2)
                    firetouchinterest(plot.GrowPart, game.Players.LocalPlayer.Character.HumanoidRootPart, 1)
                end
            end
        end
    end
end

-- Fonction de collecte automatique
function AutoCollect()
    while AutoCollectEnabled and task.wait(1) do
        for _, drop in pairs(workspace.Drops:GetChildren()) do
            if drop:IsA("Part") then
                firetouchinterest(drop, game.Players.LocalPlayer.Character.HumanoidRootPart, 0)
                task.wait(0.1)
                firetouchinterest(drop, game.Players.LocalPlayer.Character.HumanoidRootPart, 1)
            end
        end
    end
end

-- Fonction d‚Äôarrosage automatique
function AutoWater()
    while AutoWaterEnabled and task.wait(1) do
        local tool = game.Players.LocalPlayer.Backpack:FindFirstChild("WateringCan") or game.Players.LocalPlayer.Character:FindFirstChild("WateringCan")
        if tool then
            tool:Activate()
        end
    end
end

-- Onglet Auto
local AutoTab = Window:MakeTab({
    Name = "üåæ AutoFarm",
    Icon = "rbxassetid://7734053495",
    PremiumOnly = false
})

AutoTab:AddToggle({
    Name = "‚úÖ Auto Farm",
    Default = false,
    Callback = function(value)
        AutoFarmEnabled = value
        if value then
            AutoFarm()
        end
    end
})

AutoTab:AddToggle({
    Name = "üéÅ Auto Collect Drops",
    Default = false,
    Callback = function(value)
        AutoCollectEnabled = value
        if value then
            AutoCollect()
        end
    end
})

AutoTab:AddToggle({
    Name = "üíß Auto Watering",
    Default = false,
    Callback = function(value)
        AutoWaterEnabled = value
        if value then
            AutoWater()
        end
    end
})

-- Onglet TP
local TPTab = Window:MakeTab({
    Name = "üìç T√©l√©portation",
    Icon = "rbxassetid://7734068321",
    PremiumOnly = false
})

TPTab:AddButton({
    Name = "üè† Aller √† la ferme",
    Callback = function()
        local char = game.Players.LocalPlayer.Character
        local plot = nil
        for _, p in pairs(workspace.Plots:GetChildren()) do
            if p:FindFirstChild("Owner") and p.Owner.Value == game.Players.LocalPlayer.Name then
                plot = p
                break
            end
        end
        if plot then
            char:MoveTo(plot.Position.Position + Vector3.new(0, 5, 0))
        end
    end
})

-- Onglet Divers
local MiscTab = Window:MakeTab({
    Name = "‚öôÔ∏è Divers",
    Icon = "rbxassetid://7733971330",
    PremiumOnly = false
})

MiscTab:AddButton({
    Name = "üöÄ Vitesse x2",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 32
    end
})

MiscTab:AddButton({
    Name = "üîÑ Reset Vitesse",
    Callback = function()
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = 16
    end
})

-- Cr√©dit
local CreditsTab = Window:MakeTab({
    Name = "üìú Cr√©dits",
    Icon = "rbxassetid://7733765395",
    PremiumOnly = false
})

CreditsTab:AddParagraph("Script par", "üîß ChatGPT x Solara Executor\nVersion 1.0 - Mise √† jour Juin 2025")

OrionLib:Init()
